{% liquid
  assign background_color = section.settings.background_color
  assign tolstoy_carousel_header = section.settings.tolstoy_carousel_header
  assign header_tag = section.settings.header_tag
  assign header_color = section.settings.header_color
  assign app_block_id = section.settings.app_block_id
%}

{% style %}
  /* normal css */
  .tolstoy-video-carousel-widget-controller {
    background-color: {{ section.settings.bg_color }};
    padding-top: var(--full-width-space-above-header);
  }
  .tolstoy-video-carousel-widget-controller .tolstoy-carousel-header {
    background-color: {{ background_color }};
    font-size: calc(var(--full-width-font-size) * 0.9) !important;
    padding-bottom: var(--full-width-space-above-header);
    line-height: unset !important;
    max-width: unset !important;
    text-align: center !important;
    color: {{ header_color }};
  }

  /* special css */
  #{{ app_block_id }} {
    background-color: {{ section.settings.bg_color }};
  }
  #{{ app_block_id }} .tolstoy-carousel-container{
    margin-top: 0px !important;
    margin-bottom: 0px !important;
  }
{% endstyle %}

<div class="tolstoy-video-carousel-widget-controller">
  <{{ header_tag }} class="tolstoy-carousel-header">{{ tolstoy_carousel_header }}</{{ header_tag }}>
</div>

{% schema %}
{
  "name": "Tolstoy Carousel +",
  "settings": [
    {
      "id": "app_block_id",
      "type": "text",
      "label": "App Block ID"
    },
    {
      "type": "header",
      "content": "Tolstoy Carousel Header",
    },
    {
      "type": "text",
      "id": "tolstoy_carousel_header",
      "label": "Header Text"
    },
    {
      "type": "color",
      "id": "header_color",
      "label": "Custom Header Color",
      "default": "#ffffff"
    },
    {
      "id": "header_tag",
      "type": "select",
      "label": "Header Tag",
      "default": "h2",
      "options": [
        {
          "value": "h1",
          "label": "H1"
        },
        {
          "value": "h2",
          "label": "H2"
        },
        {
          "value": "h3",
          "label": "H3"
        },
        {
          "value": "h4",
          "label": "H4"
        },
        {
          "value": "h5",
          "label": "H5"
        },
        {
          "value": "h6",
          "label": "H6"
        }
      ],
    },
    {
      "type": "header",
      "content": "Design"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#62B5E5"
    }
  ],
  "presets": [
    {
      "name": "Tolstoy Carousel +",
    }
  ]
}
{% endschema %}